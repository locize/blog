#header
    background: color-header-background
    padding-bottom: nav-height
    position: relative

#header-outer
    height: 100%
    position: relative

#header-inner
    position: relative

#header-title
    clearfix()
    text-align: left
    // padding: 30px 30px
    .logo-wrap
        text-align: left
        float: left
    .subtitle-wrap
        text-align: left
        float: left
        padding: 5px 0px 0px
        margin-left: 20px
    .subtitle
        font-size: 16px
        // font-style: italic
        line-height: logo-height + 10
        color: color-nav-foreground
        text-shadow: 0 1px rgba(0, 0, 0, 0.2)

// @media only screen and (max-width: 560px)
@media only screen and (max-width: 920px)
    #header-title
        .subtitle
            display: none;

