p
  font-weight: 300

  &.bold
    font-weight: 400

  &.headline
    font-size: 1.2em
    text-transform: uppercase

    i
      top: 4px;
      position: relative;

  &.footline
    font-size: 0.8em
    text-transform: uppercase
    margin-bottom: 5px

  &.foottext
    font-size: 0.8em
    margin: 5px 0

  &.callout
    display: inline-block
    font-size: 1.2em
    text-transform: uppercase
    padding: 1.2em 2em
    border: 1px solid $text-light

  &.extra-margin
    margin-top: 60px

a
  color: $white

  &:active, &:visited
    color: $white

  &:hover
    color: $primary-light

h1
  font-size: 2em
  line-height: 1em
